{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"declaration": false,
		"noEmit": false,
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"types": ["react", "react-dom"],
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"src/__tests__",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
